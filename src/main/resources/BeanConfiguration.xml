<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd

        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>

    <bean id="client" class="com.andrewfroze.springApp.Client">
        <constructor-arg value="${id}"/>
        <constructor-arg  value="${name}"/>
        <property name="greeting" value="${greeting}"/>
    </bean>

    <bean id="consoleEventLogger" class="com.andrewfroze.springApp.ConsoleEventLogger" />

    <bean id="app" class="com.andrewfroze.springApp.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="event" class="com.andrewfroze.springApp.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.andrewfroze.springApp.FileEventLogger" init-method="init">
        <constructor-arg value="src/main/resources/eventLog.log"/>
    </bean>
    <bean id="cacheFileEventLogger" class="com.andrewfroze.springApp.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg value="src/main/resources/eventLog.log"/>
        <constructor-arg value="10"/>
    </bean>

    <bean id="combinedEventLogger" class="com.andrewfroze.springApp.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
